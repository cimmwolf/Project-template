{
	"name": "website",
	"author": "Denis Beliaev",
	"license": "UNLICENSED",
	"description": "Website",
	"devDependencies": {
		"autoprefixer": "^9.7.4",
		"bootstrap-sass": "^3.3.7",
		"browser-sync": "^2.26.7",
		"concurrently": "^5.1.0",
		"cssnano": "^4.1.10",
		"eslint": "^6.8.0",
		"eslint-plugin-html": "^6.0.0",
		"gulp": "^3.9.0",
		"gulp-imagemin": "^7.1.0",
		"gulp-php2html": "^0.3.2",
		"gulp-postcss": "^8.0.0",
		"gulp-sass": "^4.0.2",
		"imagemin-jpegoptim": "^6.0.0",
		"rimraf": "latest",
		"webpack": "^4.42.0",
		"webpack-cli": "^3.3.11"
	},
	"scripts": {
		"install": "composer install",
		"build": "webpack --mode=production",
		"build-in-pipeline": "yarn && yarn build && gulp publish",
		"serve": "concurrently \"php -S localhost:8080 router.php\" \"browser-sync 'http://localhost:8080' ./ -w --port 8000\" \"gulp watch\" \"webpack --watch\""
	},
	"browserslist": [
		"> 1% in RU",
		"iOS >= 12",
		"Safari >= 12",
		"last 2 Edge versions"
	],
	"dependencies": {
		"@polymer/polymer": "^3.0",
		"@webcomponents/webcomponentsjs": "^2.0",
		"picturefill": "^3.0.2",
		"smoothscroll-polyfill": "^0.4.3"
	},
	"eslintConfig": {
		"root": true,
		"extends": [
			"eslint:recommended"
		],
		"env": {
			"browser": true,
			"es6": true,
			"node": true
		},
		"plugins": [
			"html"
		],
		"rules": {
			"brace-style": "off",
			"new-cap": [
				"error"
			],
			"no-var": "off",
			"require-jsdoc": "off",
			"comma-dangle": "off"
		},
		"parserOptions": {
			"ecmaVersion": 6,
			"sourceType": "module"
		},
		"globals": {
			"Polymer": true
		}
	}
}
